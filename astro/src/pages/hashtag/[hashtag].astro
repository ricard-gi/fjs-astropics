---
import Layout from "../../layouts/Layout.astro";
import Picture from "../../components/Picture.astro"
const { hashtag } = Astro.params;

if (!Astro.cookies.has('token')){
return Astro.redirect('/login')
}

let token = Astro.cookies.get('token').value;

const options = {headers: {Authorization: `Bearer ${token}`}};
let images = []
try{

	let x = await fetch(`http://localhost:3000/api/images/hashtag/${hashtag}`, options)
	 images = await x.json()
	 
} catch (err) {
	throw err
}



---

<Layout title={"images for hashstag "+hashtag}>


    <div class="grid grid-cols-4">
		{
			images.map(e => <Picture pic={e} />)
		}

	</div>
		



</Layout>